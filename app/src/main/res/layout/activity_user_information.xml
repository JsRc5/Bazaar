<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/distanceBar"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceTextView" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="DONE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceBar" />

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="302dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doneButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/artsAndCrafts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Arts &amp; Crafts"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>

            <CheckBox
                android:id="@+id/electronics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Electronics"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>

            <CheckBox
                android:id="@+id/books"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Books"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>

            <CheckBox
                android:id="@+id/clothing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Clothing"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>

            <CheckBox
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Home"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>

            <CheckBox
                android:id="@+id/bikes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bikes"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>

            <CheckBox
                android:id="@+id/misc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Misc"
                android:gravity="center"
                android:onClick="onCheckboxClicked"
                android:textSize="50sp"/>
            </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>